    "version": "0.2.0",
    "configurations": [
        {
            "name": "test",
            "type": "debugpy",
            "request": "attach",
            "justMyCode": true,
            "connect": {
                "host": "127.0.0.1",
                "port": 5678
            }
        },
        {
            "name": "Project",
            "type": "debugpy",
            "request": "attach",
            "justMyCode": true,
            "connect": {
                "host": "127.0.0.1",
                "port": 5678
            },
            "preLaunchTask": "Textual Launch Setup"
        },
        {
            "name": "Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        }
    ]
}
